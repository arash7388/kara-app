             x:Class="Kara.MessageForm"
            NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                TextColor="Red"
                FontAttributes="Bold"
                FontSize="Medium"
                Text="جهت استفاده از برنامه لطفا مکان یاب را روشن کنید"
